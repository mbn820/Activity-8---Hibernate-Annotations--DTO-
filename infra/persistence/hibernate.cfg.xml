<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name = "hibernate.connection.username">postgres</property>
		<property name = "hibernate.connection.password">ex1stgl0bal</property>
		<!-- <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5433/persondb</property> -->
		<property name = "hibernate.connection.url">jdbc:postgresql://localhost:5433/testpersondatabase</property>
		<property name = "connection_pool_size">1</property>
		<property name = "show_sql">true</property>
		<!--Cache-->
		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory</property>

		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="net.sf.ehcache.configurationResourceName">ehcache.xml</property>

		<mapping class = "com.exist.ecc.core.model.Person"/>
		<mapping class = "com.exist.ecc.core.model.Role"/>
		<mapping class = "com.exist.ecc.core.model.Contact"/>

	</session-factory>
</hibernate-configuration>
